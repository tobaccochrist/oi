<UserControl x:Class="MatrizenRechner.Components.MatrizenRechner_ViewNavbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MatrizenRechner.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Transponieren"
                Grid.Row="0"
                Style="{StaticResource btnNavigation}"/>
        <Button Content="Endmatrix"
                Grid.Row="1"
                Style="{StaticResource btnNavigation}"/>
        <Button Content="Determinante"
                Grid.Row="2"
                Style="{StaticResource btnNavigation}"/>
        <Button Content="Inverse"
                Grid.Row="3"
                Style="{StaticResource btnNavigation}"/>
    </Grid>
</UserControl>
